<div class="non_nav">

  <div class="current_match_header">
    <h2><%=@game.name%></h2>
    <h4><%=@game.description%></h2>
  </div>

    <!-- ***** Display players in order (OR maybe team vs team layout) ***** -->
    <div class="row">

      <div class="col-md-6 team_show">

        <% @home_team.each do |player| %>

        <div class="col-md-3 team_player team_a">
          <img src="" alt="" class="img-circle team_match_image">
          <p><%=player.firstname%> <%=player.lastname%></p>
          <p>placeholder</p>
        </div>

        <%end%>
      </div>

      <div class="col-md-6 team_show">

         <% @arr.each do |placeholder| %>

        <div class="col-md-3 team_player team_b">
          <img src="" alt="" class="img-circle team_match_image">
          <p><%=placeholder%></p>
          <p><%=placeholder%></p>
        </div>

        <%end%>
      </div>
    </div><!-- end row -->

    <br><br>

    <!-- ***** Current score ***** -->

    <div class="row">

      <div class="col-md-5 team_show team_a">
        <h3><%=@placeholder%></h3>
      </div>

      <div class="col-md-2 team_show">

        <h4><%=@placeholder%></h4>

      </div>

      <div class="col-md-5 team_show team_b">
        <h3><%=@placeholder%></h3>
      </div>

    </div>


    <div class="row">
      <div class="col-md-5 team_show team_a">
        <h1><%=@placeholder%> meters</h1>
      </div>
      <div class="col-md-2 team_show">
        <h1>VS.</h1>
      </div>
      <div class="col-md-5 team_show team_b">
        <h1><%=@placeholder%> meters</h1>
      </div>
    </div>
    <br><br><br>

    <!-- ***** Team A run logs ***** -->

    <div class="row">

      <div class="col-md-4 team_show team_a">
        <ul class="list-group">
          <% @arr.each do |placeholder| %>

          <li class="list-group-item"><%=placeholder%> ran <%=placeholder%> miles <a href="" data-lightbox="team_a_maps" data-title="<%=placeholder%> ran <%=placeholder%> miles"><span class="glyphicon glyphicon-map-marker"></span> </a></li>

          <%end%>
        </ul>
      </div>

      <!-- ***** Talk shit forum ***** -->

      <div class="col-md-4 team_show">

        <div class="title_box">
          <label>Talk Shit</label>
        </div>

        <div class="actionBox">

          <form class="form-inline" role="form">

            <div class="form-group">
              <input class="form-control" type="text" placeholder="Say something" />
            </div>

            <div class="form-group">
              <button class="btn btn-default">Add</button>
            </div>

          </form>

          <ul class="commentList">
            <% @arr.each do |placeholder| %>
            <li>
              <div class="commenterImage">
                <img src="" />
              </div>
              <div class="commentText">
                <p class=""><%=placeholder%></p> <span class="date sub-text"><%=placeholder%></span>
              </div>
            </li>
            <%end%>
          </ul>
        </div> <!-- actin box ends -->
      </div>

      <!-- ***** Team B run logs ***** -->

      <div class="col-md-4 team_show team_b">
        <ul class="list-group">
          <% @arr.each do |placeholder| %>

          <li class="list-group-item"><%=placeholder%> ran <%=placeholder%> miles <a href="" data-lightbox="team_b_maps" data-title="=placeholder%> ran <%=placeholder%> miles"><span class="glyphicon glyphicon-map-marker"></span> </a></li>

          <%end%>
        </ul>
      </div>

    </div>

  </div>
